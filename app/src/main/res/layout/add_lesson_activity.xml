<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AddLesson"
    android:id="@+id/addLesson">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/module_code"
        android:id="@+id/moduleCode"
        android:layout_below="@+id/colourChange"
        android:layout_alignRight="@+id/moduleName"
        android:layout_alignEnd="@+id/moduleName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/module_name"
        android:id="@+id/moduleName"
        android:layout_below="@+id/moduleCode"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@drawable/mybutton"
        android:gravity="center_vertical"
        android:textColor="#fff"
        android:id="@+id/colourButton"
        android:layout_toRightOf="@+id/selectedDay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/colour_change"
        android:id="@+id/colourChange"
        android:layout_alignBottom="@+id/colourButton"
        android:layout_alignRight="@+id/suButton"
        android:layout_alignEnd="@+id/suButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:id="@+id/mButton"
        android:layout_below="@+id/moduleName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T"
        android:id="@+id/tButton"
        android:layout_alignTop="@+id/mButton"
        android:layout_toRightOf="@+id/mButton"
        android:layout_toEndOf="@+id/mButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Th"
        android:id="@+id/thButton"
        android:layout_below="@+id/moduleName"
        android:layout_toRightOf="@+id/wButton"
        android:layout_toEndOf="@+id/wButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:id="@+id/wButton"
        android:layout_below="@+id/moduleName"
        android:layout_toRightOf="@+id/tButton"
        android:layout_toEndOf="@+id/tButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/fButton"
        android:layout_below="@+id/moduleName"
        android:layout_toRightOf="@+id/thButton"
        android:layout_toEndOf="@+id/thButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:id="@+id/sButton"
        android:layout_below="@+id/moduleName"
        android:layout_toRightOf="@+id/fButton"
        android:layout_toEndOf="@+id/fButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Su"
        android:id="@+id/suButton"
        android:layout_alignTop="@+id/sButton"
        android:layout_toRightOf="@+id/sButton"
        android:layout_toEndOf="@+id/sButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Day"
        android:id="@+id/selectedDay"
        android:focusableInTouchMode="true"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tButton"
        android:layout_alignStart="@+id/tButton"
        android:enabled="false"
        android:editable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start"
        android:id="@+id/StartText"
        android:layout_below="@+id/selectedDay"
        android:layout_alignLeft="@+id/selectedDay"
        android:layout_alignStart="@+id/selectedDay" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="End"
        android:id="@+id/EndText"
        android:layout_below="@+id/StartText"
        android:layout_alignLeft="@+id/StartText"
        android:layout_alignStart="@+id/StartText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/descriptionText"
        android:layout_below="@+id/EndText"
        android:layout_alignLeft="@+id/EndText"
        android:layout_alignStart="@+id/EndText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:id="@+id/locationText"
        android:layout_below="@+id/descriptionText"
        android:layout_alignLeft="@+id/descriptionText"
        android:layout_alignStart="@+id/descriptionText" />

</RelativeLayout>
